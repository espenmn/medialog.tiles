
<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="medialog.tiles">


  <!-- Publish static files -->
  <plone:static
      name="medialog.tiles"
      type="plone"
      directory="static"
      />
      
 
  <!-- Tile -->
  <!-- configure zcml:condition="installed plone.tiles" -->
    
  <!-- Include our dependencies -->
  <include package="plone.app.tiles" />
  <include package="zope.component" file="meta.zcml" />
  <include package="zope.security" file="meta.zcml" />

  <include package="plone.app.mosaic" />
  <include package="plone.tiles" file="meta.zcml" />

  <plone:tile
    name="medialog.tiles.accordion"
    title="Accordion Tile"
    description="Expanding tile"
    add_permission="cmf.ModifyPortalContent"
    class=".accordian_tile.AccordianTile"
    for="*"
    permission="zope.Public"
    schema=".accordian_tile.IAccordianTile"
    template="templates/accordian_tile.pt"
    />
 

  <plone:tile
        name="medialog.tiles.LRtile"
        title="LR tile"
        description="Responsive text and image"
        for="*"
        schema=".tiles.ILRTile"
        class=".tiles.LRTile"
        template="lrtile.pt"
        permission="zope2.View"
         add_permission="cmf.ModifyPortalContent"
        />
        
</configure>

 